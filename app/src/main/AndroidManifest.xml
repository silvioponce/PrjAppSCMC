<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sci.sponce.prjappscmc">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_cat_ninos"
            android:logo="@mipmap/ic_launcher"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ListNinosActivity"
            android:label="@string/title_activity_list_ninos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetNinoActivity" />
        <activity
            android:name=".ListCasoMenoresActivity"
            android:label="@string/title_activity_list_caso_menores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetCasoMenoresActivity" />
        <activity
            android:name=".ListCasoMayoresActivity"
            android:label="@string/title_activity_list_caso_mayores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetCasoMayoresActivity" />
        <activity
            android:name=".ListVistaMenoresActivity"
            android:label="@string/title_activity_list_vista_menores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetVisitaMenoresActivity" />
        <activity
            android:name=".DetVisitaMayoresActivity"
            android:label="@string/title_activity_det_visita_mayores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListVisitaMayoresActivity"
            android:label="@string/title_activity_list_visita_mayores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CargaDatosActivity"
            android:label="@string/title_activity_carga_datos"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>