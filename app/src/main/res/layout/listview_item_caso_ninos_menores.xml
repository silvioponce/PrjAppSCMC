<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"

    card_view:cardUseCompatPadding="true" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_margin="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/viewNomNinoCasoMenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lugaratencion"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre del Contacto"

            android:id="@+id/viewEnfermedad"
            android:textSize="12dp"
            android:gravity="center"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Lugar de Atención:"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="Lugar de Atencion"
                android:id="@+id/viewLugarAtencion"

                android:layout_marginTop="5dp"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha Atención:"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:id="@+id/textView3"
                android:textSize="10dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="21/09/1985"
                android:id="@+id/viewFechaAtencion"
                android:layout_marginTop="5dp"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Edad Meses: "
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:id="@+id/ViewText5"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="M"
                android:id="@+id/viewEdadMeses"
                android:layout_marginTop="5dp"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tratamiento:"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:id="@+id/textView20"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="Lugar de Atencion"
                android:id="@+id/viewTratamiento"
                android:layout_marginTop="5dp"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

    <CheckBox android:id="@+id/cbxSincronizadoCasoNinosMenores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"/>

</RelativeLayout>

</android.support.v7.widget.CardView>